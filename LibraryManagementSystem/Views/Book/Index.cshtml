@model List<Book>

@{
    ViewData["Title"] = "List Books";
}

<partial name="_Notification"/>

<div class="container">
    <div class="row pb-4 mt-3">
        <div class="col-3">
            <h3>Book List</h3>
        </div>
        <form asp-action="Index" class="d-flex col-6">
            <input name="Code" class="form-control me-2 fs-5 text-uppercase" type="search" placeholder="Code" aria-label="Search">
            <button class="btn btn-primary fs-5" type="submit">Search</button>
        </form>
        <div class="col-3 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary fs-5">Add Book</a>
        </div>
    </div>
    <button class="btn btn-primary fs-5">
        <a asp-action="Index" class="text-white text-decoration-none">Full List</a>
    </button>
    <table class="table table-primary table-hover table-bordered border-primary fw-bold text-center mt-3">
        <thead class="text-primary">
            <tr>
                <td>
                    Code
                </td>
                <td>
                    ISBN
                </td>
                <td>
                    Title
                </td>
                <td>
                    Author
                </td>
                <td>
                    Description
                </td>
                <td>
                    Quantity
                </td>
                <td>
                    Action
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var list in Model)
            {
                <tr>
                    <td>
                        @list.Code?.ToUpper()
                    </td>
                    <td>
                        @list.ISBN?.ToUpper()
                    </td>
                    <td>
                        @list.Title?.ToUpper()
                    </td>
                        <td>
                        @list.Author?.ToUpper()
                        </td>
                    <td>
                        @list.Description?.ToUpper()
                    </td>
                    <td>
                        @list.Quantity
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@list.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square mx-1"></i>
                                Edit
                            </a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@list.Id" class="btn btn-danger">
                                <i class="bi bi-trash3-fill mx-1"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script>
        $('#linkBooks').addClass('active');
    </script>
}

