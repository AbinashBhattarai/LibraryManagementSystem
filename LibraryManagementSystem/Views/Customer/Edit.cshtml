@model Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container">
    <div class="pb-3">
        <h3>
            Update Customer
        </h3>
    </div>
    <form method="post" class="form-control w-50 shadow p-3">
        <div class="mb-3 fw-bold">
            <label asp-for="Code" class="p-1"></label>
            <input asp-for="Code" readonly class="form-control fs-5 text-uppercase" />
        </div>
        <div class="mb-3 fw-bold">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" class="form-control fs-5 text-uppercase" />
            <span asp-validation-for="Name" class="text-danger fw-normal"></span>
        </div>
        <div class="mb-3 fw-bold">
            <label asp-for="Email" class="p-1"></label>
            <input asp-for="Email" class="form-control fs-5" />
            <span asp-validation-for="Email" class="text-danger fw-normal"></span>
        </div>
        <div class="mb-3 fw-bold">
            <label asp-for="Address" class="p-1"></label>
            <input asp-for="Address" class="form-control fs-5 text-uppercase" />
            <span asp-validation-for="Address" class="text-danger fw-normal"></span>
        </div>
        <div class="mb-3 fw-bold">
            <label asp-for="Phone" class="p-1"></label>
            <input asp-for="Phone" class="form-control fs-5" />
            <span asp-validation-for="Phone" class="text-danger fw-normal"></span>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary fw-bold">Update Customer</button>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-primary fw-bold">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        <script>
            $('#linkCustomer').addClass('active');
        </script>
    }
}

